              label(for='email') E-mail 
              input#email(type='email' name='email' placeholder='XXX@mail.com')
              span#emailError.organize
            div
              label(for='password') Password
              input#password(name='password' type='password' placeholder='')
              span#password-error.organize
            button.btn.btn--form(type='submit') Login
