doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../css/login.css')
  title Login
section.section-login
  header
    h1.heading-login Enter your details
  section.section-cta
    .container
      .cta
        .cta-text-box
          form.cta-form(action='/api/regloginPage' name='signupform' onsubmit='return Validate(event);' method='POST')
            //- div
            //-   label(for='fullname') Full Name
            //-   input#Full-name(type='text' name='fullname' placeholder='')
            //-   span#FnameError.organize
            div
              label(for='email') E-mail 
              input#email(type='email' name='email' placeholder='XXX@mail.com')
              span#emailError.organize
            div
              label(for='password') Password
              input#password(name='password' type='password' placeholder='')
              span#password-error.organize
            button.btn.btn--form(type='submit') Login
