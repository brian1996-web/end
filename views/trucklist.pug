h1 

 table.table()
  thead.table-dark
    tr
      th(scope='col') firstname
      th(scope='col') Lastname
      th(scope='col') username
      th(scope='col') Email
      th(scope='col') Role
      th(scope='col') phone
      th(scope='col') Date
      th(scope='col') ArrivalTime
      th(scope='col') ReceiptNumber
      th(scope='col') ExitTime
      th(scope='col') Amount
      th(scope='col') Gender
      th(scope='col') password
      th(scope='col') Delete
      th(scope='col') Edit
  tbody

    if trucks.length
        each truck in trucks 
          tr      
            td #{truck.firstname}
            td #{truck.lastname}
            td #{truck.username}
            td #{truck.email}
            td #{truck.role}
            td #{truck.phone}
            td #{truck.date}
            td #{truck.arrivalTime}
            td #{truck.receiptnumber}
            td #{truck.exitTime}
            td #{truck.amount}
            td #{truck.gender}
            td #{truck.password}
            td
                form(action="/api/truck/delete" method="POST")
                    input(type="hidden" name="id" value=truck._id)
                    button.btn.btn-danger(type="submit") Delete
            td
                a.btn.btn-warning(href="/api/truck/edit/"+truck._id) Edit
                
                //- a(href=`/api/truck/edit${truck._id}`) Edit
    else 
      p there are no trucks in the database
  

