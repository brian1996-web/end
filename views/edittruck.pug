form.row.g-3(name="truckform" method="POST" action="/api/truck/edit?id="+truck._id )
          div
            div
              label(for='firstname') First Name 
              input#firstname(type='text' name='firstname' placeholder='James' value=truck.firstname)
              span#FnameError.organize
            div
              label(for='lastname') Last Name
              input#Lastname(type='text' name='lastname' placeholder=' Milner' value=truck.lastname)
              span#LnameError.organize
            div
              label(for='username') Username
              input#Username(type='text' name='username' placeholder='' value=truck.username)
              //- input#Username(type='text' name='username' placeholder=' Milner' value={truck.username})
              span#UsernameError.organize
            div
              label(for='email') E-mail
              input#email(type='text' name='email' placeholder='XXX@mail.com' value=truck.email)
              span#emailError.organize
            div
               label.form-label(for ="role") Section
               select(name="role") 
                    option(value=" ") Select section
                    option(value=" parking") Parking 
                    option(value="tire") Tire
                    option(value="battery") Battery Section
               
             
            div
              label(for='date') Date
              input#dater(name='date' type='date' placeholder='' value=truck.date)
              span#dateError.organize 
            
          div
            //- div
            //-   label(for='phonenumber') Phone Number
            //-   input#phonenumber(name='phonenumber' type='telphone' placeholder='+256')
            //-   span#phoneError.organize  
            div
              label(for='arrivalTime') Arrival Time
              input#arrivaTime(name='arrivalTime' type='time' placeholder='' value=truck.arrivalTime)
              span#arrivalTimeError.organize 

            div
              label(for='receiptnumber') Receipt Number
              input#receiptnumber(name='receiptnumber' type='receipt' placeholder='' value=truck.receiptnumber)
              span#receiptnumberError.organize  
            div
              label(for='exitTime') Exit Time
              input#exitTime(name='exitTime' type='time' placeholder='' value=truck.exitTime)
              span#exitTimeError.organize
            div
              label(for='gender') Gender
              input#gender(name='gender' type='text' placeholder='' value=truck.gender)
              span#genderError.organize
              

            div
              label(for='password') Enter Password
              input#password(type='password' name='password' placeholder='@Brian1998' value=truck.password)
              span#password-error.organize
              




